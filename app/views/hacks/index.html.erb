<p id="notice"><%= notice %></p>

<h1>Hacks</h1>

<table>
  <thead>
    <tr>
      <th>Current password</th>
      <th>New password</th>
      <th>Confirm new password</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @hacks.each do |hack| %>
      <tr>
        <td><%= hack.Current_password %></td>
        <td><%= hack.New_password %></td>
        <td><%= hack.Confirm_new_password %></td>
        <td><%= link_to 'Show', hack %></td>
        <td><%= link_to 'Edit', edit_hack_path(hack) %></td>
        <td><%= link_to 'Destroy', hack, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Hack', new_hack_path %>
